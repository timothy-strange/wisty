{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wisty",
  "version": "2.0.1",
  "identifier": "wisty-ts",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "wisty",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "category": "Utility",
    "shortDescription": "Plain text editor",
    "fileAssociations": [
      {
        "ext": [
          "txt",
          "text"
        ],
        "mimeType": "text/plain",
        "description": "Plain text document"
      },
      {
        "ext": [
          "md"
        ],
        "mimeType": "text/markdown",
        "description": "Markdown document"
      },
      {
        "ext": [
          "log"
        ],
        "mimeType": "text/x-log",
        "description": "Log file"
      },
      {
        "ext": [
          "json"
        ],
        "mimeType": "application/json",
        "description": "JSON document"
      },
      {
        "ext": [
          "xml"
        ],
        "mimeType": "application/xml",
        "description": "XML document"
      },
      {
        "ext": [
          "csv"
        ],
        "mimeType": "text/csv",
        "description": "CSV document"
      }
    ],
    "linux": {
      "deb": {
        "desktopTemplate": "wisty.desktop.hbs"
      },
      "rpm": {
        "desktopTemplate": "wisty.desktop.hbs"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
